<h1>All Paintings</h1>

<div class="row">
  <% @all_paintings.each do |painting| %>
    <div class="col-md-4">
      <div class="well">
          <h2><a href="/paintings/<%= painting.id %>"><%= painting.name %></a></h2>
          <img src="<%= painting.image %>" class="img img-rounded img-responsive full-width index-thumb">
            <p>$<%= painting.price %></p>
            <ul>
              <% painting.description_list.each do |description| %>
                <li><%= description %></li>
              <% end %>
            </ul>
      </div>
    </div>      
  
  <% end %>
</div>