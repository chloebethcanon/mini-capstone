<h1>Add new painting:</h1>
<%= form_tag '/paintings' , method: :post do %>
  <div class="form-group">
    <%= label_tag :name %>
    <%= text_field_tag :name, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :image %>
    <%= text_field_tag :image, nil, class: "form-control", placeholder: "Enter the image URL" %>
  </div>
  <div class="form-group">
    <%= label_tag :price %>
    <%= text_field_tag :price, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label_tag :description %>
    <%= text_field_tag :description, nil, class: "form-control" %>
  </div>
  <div>
    <%= button_tag 'Submit', class: "btn btn_default" %>
  </div>
<% end %>