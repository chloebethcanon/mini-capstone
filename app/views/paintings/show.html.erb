<h2><%= @painting.name %></h2>
<div class="row">
  <% @painting.images.each do |image| %>
    <div class="col-md-4">
      <img src="<%= image.image %>" class="img img-rounded img-responsive full-width index-thumb">
    </div>
  <% end %>
</div>






<p><%= @painting.stock %></p>
<p>Price: <%= number_to_currency(@painting.price) %></p>
<p>Tax: <%= number_to_currency(@painting.tax) %></p>
<p>Total Price: <%= number_to_currency(@painting.total_price) %></p>
<p><%= @painting.description %></p>
<p><%= @painting.sale_message %></p>
<p>Artist: <%= @painting.supplier.name %></p>
<p><%= link_to "Edit", "/paintings/#{@painting.id}/edit" %></p>
<p><%= link_to "Delete", "/paintings/#{@painting.id}", method: :delete %></p>
<p><a href="/paintings">Back to all paintings</a></p>

<%= form_tag '/orders', method: :post do %>
  <div class="form-group">
    <%= label_tag :quantity %>
    <%= text_field_tag :quantity, nil, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= hidden_field_tag :painting_id, @painting.id, class: "form-control" %>
  </div>
  <div>
    <%= button_tag "Buy Now!", class: "btn btn_default" %>
  </div>
<% end %>